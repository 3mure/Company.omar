@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
    Layout = null; // Optional: remove this line if you're using _Layout.cshtml
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>



    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            padding: 30px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            background: #fff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

        h1 {
            color: #3f51b5;
            text-align: center;
            margin-bottom: 30px;
        }

        .btn-primary {
            background-color: #3f51b5;
            color: white;
            padding: 10px 16px;
            text-decoration: none;
            border-radius: 4px;
            display: inline-block;
            margin-bottom: 20px;
        }

        .styled-table {
            width: 100%;
            border-collapse: collapse;
        }

            .styled-table th,
            .styled-table td {
                padding: 12px 15px;
                text-align: left;
            }

            .styled-table th {
                background-color: #3f51b5;
                color: white;
            }

            .styled-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .styled-table tbody tr:hover {
                background-color: #e0e0e0;
            }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            font-size: 0.9em;
            text-decoration: none;
        }

        .btn-outline-primary {
            border: 1px solid #3f51b5;
            color: #3f51b5;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .alert {
            padding: 20px;
            background-color: #cce5ff;
            color: #004085;
            border-radius: 6px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>All Departments</h1>
        <a asp-action="Create" asp-controller="Department" class="btn-primary">Create Department</a>

        @if (Model.Any())
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Date Of Creation</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.code</td>
                            <td>@item.Name</td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <partial name="_Button" model="item.Id"></partial>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert">
                <h4>There are no departments</h4>
            </div>
        }
    </div>
</body>
</html>